<div class="bg-gradient-to-b from-indigo-600 to-gray-100 h-screen w-screen p-8 justify-center items-center flex">
  <div class="lg:w-full rounded-2xl bg-white shadow p-8 flex flex-col justify-between min-h-128 min-w-80">
    <div class="text-center">
      <p class="lg:text-5xl text-3xl font-bold mb-4 text-indigo-600">Survey Details</p>
      <p class="lg:text-2xl text-gray-700 font-semibold pt-6"><%= @survey.title %></p>
    </div>
    <div class="text-center pb-6">
      <%= link_to "Start Survey", question_path(@survey.questions.first), class: "btn btn-primary rounded-full bg-indigo-600 px-6 py-3 w-full opacity-80 shadow hover:bg-indigo-400 text-white" %>
    </div>
  </div>
</div>
